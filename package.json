{
  "private": true,
  "version": "2020.08.24",
  "author": "SSen <i@ssen.name>",
  "license": "MIT",
  "repository": "github:rocket-hangar/generate-github-directory",
  "workspaces": [
    "packages"
  ],
  "scripts": {
    "build": "yarn workspace packages run build",
    "publish": "yarn run test && yarn run build && yarn workspace packages run publish",
    "view": "yarn workspace packages run view",
    "doctor": "yarn workspace packages run doctor",
    "test": "yarn workspace packages run test",
    "coverage": "yarn workspace packages run coverage --coverageDirectory $PWD/coverage",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint \"**/*.{js,ts,tsx}\""
  },
  "lint-staged": {
    "**/src/{**/*,*}.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@handbook/markdown-source-import": "^1.0.1",
    "@ssen/eslint-config": "^1.3.1",
    "@ssen/prettier-config": "^1.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  }
}
