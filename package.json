{
  "private": true,
  "scripts": {
    "build": "rocket-punch build",
    "publish": "npm run test && npm run build && rocket-punch publish",
    "view": "rocket-punch view",
    "doctor": "rocket-punch doctor",
    "test": "jest --colors",
    "coverage": "jest --coverage --colors",
    "format": "prettier --write \"src/{**/*,*}/*.{ts,tsx}\"",
    "lint": "eslint \"src/{**/*,*}/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@ssen/eslint-config": "^1.1.0",
    "@ssen/prettier-config": "^1.0.0",
    "@ssen/tmp-directory": "^2.1.2",
    "@types/eslint": "^7.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/git-url-parse": "^9.0.0",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.6.0",
    "@types/node-fetch": "^2.5.7",
    "@types/prettier": "^2.0.2",
    "@types/tar": "^4.0.3",
    "@types/yargs": "^15.0.5",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "fs-extra": "^9.0.1",
    "git-url-parse": "^11.1.3",
    "got": "^11.5.2",
    "husky": "^4.2.5",
    "jest": "^26.3.0",
    "lint-staged": "^10.2.11",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.5",
    "rocket-punch": "^2.1.0",
    "tar": "^6.0.5",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "yargs": "^15.4.1"
  }
}
